<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/activityBackgroundColor</item>
    </style>
    <!--ImageView theme on Movie Detail activity-->
    <style name="ImageViewStyle">
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">200dp</item>
    </style>
    <!--Text View style on Movie Detail activity-->
    <style name="TextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>
    <!--Text View Out of style-->
    <style name="OutOfRatingStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>
    <!--Plot text view style on Movie Detail activity-->
    <style name="PlotTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!--Static movie details text style-->
    <style name="StaticMovieDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Static movie details text style-->
    <style name="ErrorMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>